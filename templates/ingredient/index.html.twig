{% extends 'baseBack.html.twig' %}

{% block title %}Ingredient index{% endblock %}

{% block content %}
    <h1>Ingredient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th style="text-align: center;">Actions</th> <!-- Center the Actions column -->
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.nom }}</td>
                <td><img src="{{asset(ingredient.image)}}" width="150" height="auto"></td>
                <td>{{ ingredient.prix }} DT </td>
                <td>{{ ingredient.categorie }}</td>
                <td style="text-align: center;"> <!-- Center the content of this column -->
                    <form method="post" action="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}" style="display: inline-block; margin-right: 40px;">
                        <button type="submit" class="btn btn-inverse-warning btn-fw">Update</button>
                    </form>
                    
                    <form method="post" action="{{ path('app_ingredient_delete', {'id': ingredient.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline-block; margin-right: 10px;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
                        <button type="submit" class="btn btn-inverse-danger btn-fw">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ingredient_new') }}" class="btn btn-inverse-success btn-fw">Create new</a>
{% endblock %}
